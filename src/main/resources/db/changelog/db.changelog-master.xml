<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet 1: Reference 'Ingredients' table (no creation) -->
    <changeSet id="1" author="yourName">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="Ingredients"/>
        </preConditions>
        <!-- Foreign Key for Fridge_items -->
        <addForeignKeyConstraint
                baseTableName="Fridge_items"
                baseColumnNames="ingredient_id"
                referencedTableName="Ingredients"
                referencedColumnNames="ingredient_id"
                constraintName="Fridge_items_ingredient_id_fkey"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"/>
    </changeSet>

    <!-- ChangeSet 2: Reference 'Fridge_items' table (no creation) -->
    <changeSet id="2" author="yourName">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="Fridge_items"/>
        </preConditions>
        <!-- Foreign Key for Recipe_Ingredients -->
        <addForeignKeyConstraint
                baseTableName="Recipe_Ingredients"
                baseColumnNames="ingredient_id"
                referencedTableName="Fridge_items"
                referencedColumnNames="ingredient_id"
                constraintName="FK_Ingredients_Recipe_Ingredients"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"/>
    </changeSet>

    <!-- ChangeSet 3: Reference 'Recipes' table (no creation) -->
    <changeSet id="3" author="yourName">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="Recipes"/>
        </preConditions>
        <!-- Foreign Key for Recipe_Ingredients -->
        <addForeignKeyConstraint
                baseTableName="Recipe_Ingredients"
                baseColumnNames="recipe_id"
                referencedTableName="Recipes"
                referencedColumnNames="recipe_id"
                constraintName="Recipe_Ingredients_recipe_id_fkey"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"/>
    </changeSet>

    <!-- ChangeSet 4: Create Index on Recipe_Ingredients (ingredient_id) -->
    <changeSet id="4" author="yourName">
        <preConditions onFail="CONTINUE">
            <indexExists indexName="fki_FK_Ingredients_Recipe_Ingredients"/>
        </preConditions>
        <createIndex indexName="fki_FK_Ingredients_Recipe_Ingredients" tableName="Recipe_Ingredients">
            <column name="ingredient_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>