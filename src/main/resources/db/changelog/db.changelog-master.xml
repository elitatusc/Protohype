<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet 1: Ensure 'Ingredients' table exists (no creation) -->
    <changeSet id="1" author="yourName">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="Ingredients"/>
        </preConditions>
    </changeSet>

    <!-- ChangeSet 2: Ensure 'Fridge_items' table exists (no creation) -->
    <changeSet id="2" author="yourName">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="Fridge_items"/>
        </preConditions>
    </changeSet>

    <!-- ChangeSet 3: Ensure 'Recipes' table exists (no creation) -->
    <changeSet id="3" author="yourName">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="Recipes"/>
        </preConditions>
    </changeSet>

    <!-- ChangeSet 4: Ensure 'Recipe_Ingredients' table exists (no creation) -->
    <changeSet id="4" author="yourName">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="Recipe_Ingredients"/>
        </preConditions>
    </changeSet>

    <!-- ChangeSet 5: Ensure index exists on 'Recipe_Ingredients' for 'ingredient_id' (no creation) -->
    <changeSet id="5" author="yourName">
        <preConditions onFail="CONTINUE">
            <indexExists indexName="fki_FK_Ingredients_Recipe_Ingredients"/>
        </preConditions>
    </changeSet>

</databaseChangeLog>
