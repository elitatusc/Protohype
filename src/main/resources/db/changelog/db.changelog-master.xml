<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet 1: Reference the 'Ingredients' table (no creation) -->
    <changeSet id="1" author="yourName">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="Ingredients"/>
        </preConditions>
        <!-- No table creation, just ensure the table exists -->
    </changeSet>

    <!-- ChangeSet 2: Reference the 'Fridge_items' table and foreign key (no creation) -->
    <changeSet id="2" author="yourName">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="Fridge_items"/>
        </preConditions>
        <!-- Reference the existing foreign key constraint -->
        <addForeignKeyConstraint
                baseTableName="Fridge_items"
                baseColumnNames="ingredient_id"
                referencedTableName="Ingredients"
                referencedColumnNames="ingredient_id"
                constraintName="Fridge_items_ingredient_id_fkey"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"/>
    </changeSet>

    <!-- ChangeSet 3: Reference the 'Recipes' table (no creation) -->
    <changeSet id="3" author="yourName">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="Recipes"/>
        </preConditions>
        <!-- No table creation, just ensure the table exists -->
    </changeSet>

    <!-- ChangeSet 4: Reference the 'Recipe_Ingredients' table and foreign keys (no creation) -->
    <changeSet id="4" author="yourName">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="Recipe_Ingredients"/>
        </preConditions>
        <!-- Reference the existing foreign key constraints -->
        <addForeignKeyConstraint
                baseTableName="Recipe_Ingredients"
                baseColumnNames="ingredient_id"
                referencedTableName="Ingredients"
                referencedColumnNames="ingredient_id"
                constraintName="FK_Ingredients_Recipe_Ingredients"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"/>

        <addForeignKeyConstraint
                baseTableName="Recipe_Ingredients"
                baseColumnNames="recipe_id"
                referencedTableName="Recipes"
                referencedColumnNames="recipe_id"
                constraintName="Recipe_Ingredients_recipe_id_fkey"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"/>
    </changeSet>

    <!-- ChangeSet 5: Reference the existing index on Recipe_Ingredients (ingredient_id) -->
    <changeSet id="5" author="yourName">
        <preConditions onFail="CONTINUE">
            <indexExists indexName="fki_FK_Ingredients_Recipe_Ingredients"/>
        </preConditions>
        <!-- No index creation, just ensure it exists -->
    </changeSet>

</databaseChangeLog>