<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet 1: Create 'Ingredients' table -->
    <changeSet id="1" author="yourName">
        <createTable tableName="Ingredients">
            <column name="ingredient_id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ingredient_name" type="text">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet 2: Create 'Fridge_items' table -->
    <changeSet id="2" author="yourName">
        <createTable tableName="Fridge_items">
            <column name="ingredient_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="quantity_available" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign Key for Fridge_items -->
        <addForeignKeyConstraint
                baseTableName="Fridge_items"
                baseColumnNames="ingredient_id"
                referencedTableName="Ingredients"
                referencedColumnNames="ingredient_id"
                constraintName="Fridge_items_ingredient_id_fkey"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"/>
    </changeSet>

    <!-- ChangeSet 3: Create 'Recipes' table -->
    <changeSet id="3" author="yourName">
        <createTable tableName="Recipes">
            <column name="recipe_id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="instructions" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="prep_time" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="cook_time" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="difficulty_level" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="recipe_name" type="text">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet 4: Create 'Recipe_Ingredients' table -->
    <changeSet id="4" author="yourName">
        <createTable tableName="Recipe_Ingredients">
            <column name="recipe_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="ingredient_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="quantity_needed" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="quantity_unit" type="text">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <!-- Foreign Key for Recipe_Ingredients -->
        <addForeignKeyConstraint
                baseTableName="Recipe_Ingredients"
                baseColumnNames="ingredient_id"
                referencedTableName="Ingredients"
                referencedColumnNames="ingredient_id"
                constraintName="FK_Ingredients_Recipe_Ingredients"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"/>

        <addForeignKeyConstraint
                baseTableName="Recipe_Ingredients"
                baseColumnNames="recipe_id"
                referencedTableName="Recipes"
                referencedColumnNames="recipe_id"
                constraintName="Recipe_Ingredients_recipe_id_fkey"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"/>
    </changeSet>

    <!-- ChangeSet 5: Create Index on Recipe_Ingredients (ingredient_id) -->
    <changeSet id="5" author="yourName">
        <createIndex indexName="fki_FK_Ingredients_Recipe_Ingredients" tableName="Recipe_Ingredients">
            <column name="ingredient_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>